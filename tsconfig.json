{
    "compilerOptions": {
        "noErrorTruncation": true,
        "target": "es2024",
        "module": "es2022",
        "moduleResolution": "bundler",
        "lib": ["es2023"],
        "allowJs": false,
        "checkJs": false,
        "isolatedModules": true,
        "moduleDetection": "force",
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "noEmit": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true
    },
    "include": ["src/*.ts"]
}
